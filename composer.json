{
  "name": "ludelix/framework",
  "description": "Modern PHP Framework with Multi-Tenancy, Advanced ORM, and SPA Integration",
  "type": "library",
  "license": "MIT",

  "keywords": [
    "framework",
    "php",
    "multi-tenant",
    "orm",
    "spa",
    "websocket",
    "graphql",
    "cache",
    "queue",
    "template"
  ],
  "homepage": "https://ludelix.com",
  "support": {
    "issues": "https://github.com/Veelv/ludelix-framework/issues",
    "source": "https://github.com/Veelv/ludelix-framework",
    "docs": "https://ludelix.com/docs",
    "chat": "https://discord.gg/ludelix"
  },
  "authors": [
    {
      "name": "Ludelix Team",
      "email": "team@ludelix.com",
      "homepage": "https://ludelix.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "psr/log": "^3.0",
    "psr/cache": "^3.0",
    "psr/container": "^2.0",
    "psr/http-message": "^2.0",
    "doctrine/dbal": "^3.0",
    "symfony/console": "^6.0",
    "symfony/process": "^6.0",
    "monolog/monolog": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7",
    "vimeo/psalm": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "Ludelix\\": "src/"
    },
    "files": [
      "src/Core/Support/helpers.php",
      "src/Routing/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Ludelix\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "analyse": "phpstan analyse src --level=8",
    "psalm": "psalm",
    "cs-check": "phpcs src --standard=PSR12",
    "cs-fix": "phpcbf src --standard=PSR12",
    "quality": [
      "@cs-check",
      "@analyse",
      "@psalm",
      "@test"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,

  "extra": {
    "branch-alias": {
      "dev-main": "1.1-dev"
    }
  }
}
